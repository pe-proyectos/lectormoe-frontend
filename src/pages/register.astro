---
import Layout from "../layouts/Layout.astro";
---

<Layout title="lat-Manga - Tus mangas en latino">
	<div class="hero min-h-[calc(80svh)]">
		<div class="hero-content flex-col lg:flex-row-reverse">
			<div class="text-center lg:text-left">
				<h1 class="text-5xl font-bold">Registrate</h1>
				<p class="pt-6">
					Registrate para poder guardar, calificar y comentar tus
					mangas favoritos
				</p>
				<p class="pt-2">
					¿Ya tienes una cuenta? <a href="/login" class="link">Inicia sesión</a>
				</p>
			</div>
			<div class="card shrink-0 w-full max-w-sm shadow-2xl bg-base-200">
				<form id="form-register" class="card-body">
					<span class="label-text">Email</span>
					<label class="input input-bordered flex items-center gap-2 place-content-between">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70"><path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" /></svg>
						<input
							type="email"
							name="email"
							placeholder="Email"
							autocomplete="email"
							class="w-full"
							required />
					</label>
					<span class="label-text">Nombre de usuario</span>
					<label class="input input-bordered flex items-center gap-2 place-content-between">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70"><path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" /></svg>
						<input
							type="text"
							name="username"
							placeholder="Nombre de usuario"
							autocomplete="username"
							class="w-full"
							required />
					</label>
					<span class="label-text">Contraseña</span>
					<label class="input input-bordered flex items-center gap-2 place-content-between">
					  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70"><path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" /></svg>
					  <input
						type="password"
						name="password"
						placeholder="Contraseña"
						autocomplete="current-password"
						class="w-full"
						required />
					</label>
					<div class="form-control mt-6">
						<button class="btn btn-primary">Registrarse</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</Layout>

<script>
	import Toastify from 'toastify-js';
	function load() {
		console.log('import.meta.env', import.meta.env);
		console.log('process.env', process.env);
		const API_URL = import.meta.env.PUBLIC_API_URL;
		console.log('API_URL from import.meta.env.PUBLIC_API_URL =', API_URL);
		const formRegister = document.getElementById("form-register") as HTMLFormElement;
		formRegister?.addEventListener("submit", async (event) => {
			event.preventDefault();
			const button = formRegister.querySelector("button") as HTMLButtonElement;
			button.disabled = true;
			const formData = new FormData(formRegister);
			const response = await fetch(`${API_URL}/api/auth/register`, {
				method: "POST",
				body: formData,
			});
			const { status, data } = await response.json();

			if (!status) {
				Toastify({
					text: data?.error ?? "Error al registrar usuario",
					className: "alert alert-error",
					selector: document.querySelector(".toast") as HTMLElement,
					gravity: "bottom",
					position: "right",
					duration: 5000
				}).showToast();
				button.disabled = false;
			} else {
				location.href = "/login";
			}
		});
	}
	document.addEventListener("astro:page-load", load, { once: false });
</script>
